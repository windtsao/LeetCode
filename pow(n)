public class Solution {
    public double pow(double x, int n) {
        // Start typing your Java solution below
        // DO NOT write main() function
        double res=1;
        if(n>0){
            while(n>0){
                res*=x;
                n--;
            }
        return res;
        
        }
        if(n==0)return 1.00000;
        else{
            
            while(n<0){
                res/=x;
                n++;
            }
            return res;
        }
    }
}
