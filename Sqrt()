public class Solution {
    public int sqrt(int x) {
        // Start typing your Java solution below
        // DO NOT write main() function
       if(x>=0){
       int upper=x;
       int lower=0;
       int mid=0;
       int temp;
       
       while(lower<=upper){
           
           mid = lower+(upper-lower)/2;
           temp= mid*mid;
           if(temp==x)return mid;
           else if(temp>x)upper=mid-1;
           else lower = mid+1;
       }
       return upper;
       }
       return -1;
    }
}
